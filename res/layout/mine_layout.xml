<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    android:orientation="vertical" >

    <com.jiajie.jiajieproject.widget.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroud"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/layout_main_banner"
                android:layout_width="wrap_content"
                android:layout_height="162dp"
                android:background="@drawable/me_ba" >
					<!--登录状态头像  -->
                <LinearLayout
                    android:id="@+id/head_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <com.jiajie.jiajieproject.widget.CircleImageView
                        android:id="@+id/headImage"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/headerimage" />

                    <TextView
                        android:id="@+id/headname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:text="霸气男神"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>
                <!--未登录状态头像  -->
				<ImageView
				    android:id="@+id/unlogin_icon"
				    android:visibility="gone"
				    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:src="@drawable/login_registericon"
				    />
                <ImageView
                    android:id="@+id/setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="10dp"
                    android:paddingRight="20dp"
                    android:src="@drawable/account_management" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/rb_obligation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:src="@drawable/obligation" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:src="@color/backgroud" />

                <ImageView
                    android:id="@+id/rb_waitgoods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:src="@drawable/waitgoods" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:src="@color/backgroud" />

                <ImageView
                    android:id="@+id/rb_havegoods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:src="@drawable/havegoods" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:src="@color/backgroud" />

                <ImageView
                    android:id="@+id/rb_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:src="@drawable/order" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@color/backgroud" />

                <RelativeLayout
                    android:id="@+id/Mycare"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_horizontal" >

                    <ImageView
                        android:id="@+id/Mycareicon1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/mycare" />

                    <ImageView
                        android:id="@+id/Mycareicon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:src="@drawable/fanyeicon" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:src="@color/backgroud" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/clearchache"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_horizontal" >

                    <ImageView
                        android:id="@+id/clearchacheicon1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/clearcache" />

                    <ImageView
                        android:id="@+id/clearchacheicon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:src="@drawable/fanyeicon" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:src="@color/backgroud" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/Aboutshop"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_horizontal" >

                    <ImageView
                        android:id="@+id/Aboutshopicon1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/aboutshop" />

                    <ImageView
                        android:id="@+id/Aboutshopicon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:src="@drawable/fanyeicon" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/backgroud"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

                <RelativeLayout
                    android:id="@+id/quitapp"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_horizontal" >

                    <ImageView
                        android:id="@+id/Myfocusproducticon1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/quitapp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/quitapp_gray"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
              		android:visibility="gone"
                    android:background="#D7D7D7"
                    android:gravity="center_horizontal" >

                    <ImageView
                        android:id="@+id/Myfocusproducticon1_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/quitapp_gray" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </com.jiajie.jiajieproject.widget.ReboundScrollView>

</LinearLayout>