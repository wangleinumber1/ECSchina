<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#018dca"
    android:orientation="vertical" >
<ImageView
    android:id="@+id/imageviewstart1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/twoyuan"
    android:layout_marginTop="80dp"
   android:layout_centerHorizontal="true"
    />
<ImageView
    android:id="@+id/imageviewstart2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/two2"
    android:layout_marginTop="40dp"
    android:layout_below="@+id/imageviewstart1"
     android:layout_centerHorizontal="true"
    />
<ImageView
     android:id="@+id/imageviewstart3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/dot2"
   android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="30dp"
    />
</RelativeLayout>
