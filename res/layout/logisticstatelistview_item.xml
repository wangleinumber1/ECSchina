<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:drawableBottom="@drawable/wuliu_up" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:background="@null"
        android:drawableTop="@drawable/wuliu_bottom" />

    <ImageView
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:background="@null"
        android:src="@drawable/wuliu_item" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:paddingTop="25dp" >

        <TextView
            android:id="@+id/wuliutext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的订单正在由配送员李大海派 送中 "
            android:textColor="@color/textcolor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/wuliutext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="2016.8.14 08:36"
            android:textColor="#A9A9A9"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:paddingRight="10dp"
            android:background="@color/backgroud" />
    </RelativeLayout>

</RelativeLayout>