<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/headerleftImg"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:paddingRight="20dp"
            android:src="@drawable/order_back" />

        <TextView
            android:id="@+id/headercentertextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="订单详情"
            android:textColor="#333333"
            android:textSize="18sp" />

        <!-- android:background="@drawable/graybutton_up_down" -->

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/backgroud" />

    <com.jiajie.jiajieproject.widget.ReboundScrollView
        android:id="@+id/nopaylayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/orderdetailtext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:text="订单号：123456789"
                android:textColor="@color/textcolor"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="14dp"
                android:background="@color/backgroud" />

            <LinearLayout
                android:id="@+id/adress_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/headernametext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="赵晶"
                        android:textColor="#666666"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/headernnmbertext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="23dp"
                        android:layout_toRightOf="@+id/headernametext"
                        android:text="16032853584"
                        android:textColor="#666666"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/adressmessage_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp" >

                    <ImageView
                        android:id="@+id/mapicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/map_grey" />

                    <TextView
                        android:id="@+id/headeradresstext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/mapicon"
                        android:text="北京市海淀区长春路11号万柳亿城大厦A座"
                        android:textColor="#666666"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>
           <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="14dp"
                android:background="@color/backgroud" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor"
                android:textSize="14sp" 
                android:text="商品信息"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="17dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/backgroud"
                android:layout_marginTop="10dp"
                />
            
            
            
            
            
            
            
        <RelativeLayout
            android:id="@+id/orderdetail_layoutlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/orderdetail_layoutImgeView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/class_pruduce" />

            <TextView
                android:id="@+id/orderdetail_layouttext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/orderdetail_layoutImgeView1"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/orderdetail_layoutImgeView1"
                android:text="IBM power 7 内存 DDR3 16G"
                android:textColor="@color/textcolor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/orderdetail_layouttext3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orderdetail_layouttext2"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/orderdetail_layoutImgeView1"
                android:text="SN号：3248938595"
                android:textColor="@color/textcolor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/orderdetail_layouttext4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orderdetail_layouttext3"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/orderdetail_layoutImgeView1"
                android:text="￥10000.00"
                android:textColor="@color/textcolor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/orderdetail_layouttext5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/orderdetail_layouttext4"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="x2"
                android:textColor="#999999"
                android:textSize="13sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/backgroud"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
           >

            <Button
                android:id="@+id/notpay_yingfu"               
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="8000.00"
                android:textSize="13sp"
                android:background="@null"
                android:layout_centerVertical="true"
              android:layout_marginRight="10dp"
                android:textColor="@color/textcolor"
                android:drawableLeft="@drawable/notpay_yingfu" />

            <Button
                android:id="@+id/notpay_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/notpay_yingfu"
                android:background="@null"
                android:textSize="13sp"
                android:drawablePadding="5dp"
                android:layout_centerVertical="true"
                android:textColor="@color/textcolor"
                android:drawableLeft="@drawable/notpay_all"
                android:text="2"
                android:drawableRight="@drawable/notpay_jian"
                 />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/backgroud"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor"
                android:textSize="14sp" 
                android:text="发票信息"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                />
        <TextView
            android:id="@+id/orderdetailtext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="14sp" 
                android:text="抬头：北京伟仕佳杰信息服务技术有限公司"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                />
         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingBottom="6dp"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp" >

            <ImageView
                android:id="@+id/go_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/go_pay" />

            <ImageView
                android:id="@+id/cancle_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/go_pay"
                android:src="@drawable/cancle_order" />
        </RelativeLayout>
        </LinearLayout>
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
    </com.jiajie.jiajieproject.widget.ReboundScrollView>

</LinearLayout>