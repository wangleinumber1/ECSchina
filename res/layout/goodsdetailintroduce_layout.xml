<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp" >

    <TextView
        android:id="@+id/goodsdetailintroducetext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:textColor="@color/textcolor"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/goodsdetailintroducetext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/goodsdetailintroducetext1"
        android:textColor="@color/textcolor"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/goodsdetailintroducetext3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goodsdetailintroducetext1"
        android:layout_marginTop="10dp"
        android:textColor="@color/textcolor"
        android:textSize="14sp" />

</RelativeLayout>