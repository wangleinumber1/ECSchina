<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/perfisssionitemimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:padding="20dp"
        android:src="@drawable/partsitemimage" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/perfisssionitemimage"
        android:gravity="left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/perfisssionitemtext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数据库性能调优"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/perfisssionitemtext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格面议"
                android:textColor="@color/hotcolor"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>